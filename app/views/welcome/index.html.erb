  <div class="row">
      <a href="#">
        <img class="img-circle" src="<%= image_url 'beijing.jpg' %>" alt="北京">
      </a>
      <h1>北京</h1>
</div>

  <div class="row">
      <a href="#">
        <img class="img-circle" src="<%= image_url 'hangzhou.jpg' %>" alt="杭州">
      </a>
      <h1>杭州</h1>
      </div>
</div>
